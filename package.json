{
  "name": "exonum-types",
  "version": "0.0.0",
  "description": "Exonum type system for JavaScript",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "mocha -r babel-register test/**/*.js",
    "cover": "cross-env NODE_ENV=test nyc mocha -- test/**/*.js",
    "report-cover": "nyc report",
    "report-to-coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint --ignore-path .gitignore .",
    "compile": "babel src/ -d lib/ && cpy **/*.json ../lib/ --cwd=src --parents",
    "prepare": "npm run compile"
  },
  "author": "Exonum Team <exonum@bitury.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "big-integer": "^1.6.25",
    "immutable": "^3.8.1",
    "sha.js": "^2.4.8",
    "tweetnacl": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-bytes": "^0.1.1",
    "coveralls": "^2.13.1",
    "cpy-cli": "^1.0.1",
    "cross-env": "^5.0.5",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.6.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
